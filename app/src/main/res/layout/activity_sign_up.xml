<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/firstName_txt"
        android:layout_width="300dp"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/backedit"
        android:gravity="center"

        android:hint=" firstname"

        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#D6D4D4"
        android:textSize="20sp"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <EditText
        android:id="@+id/lastName_txt"
        android:layout_width="300dp"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/backedit"
        android:gravity="center"

        android:hint=" lastname"

        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#D6D4D4"
        android:textSize="20sp"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <EditText
        android:id="@+id/pass_txt"
        android:layout_width="300dp"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/backedit"
        android:gravity="center"

        android:hint="password"

        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#D6D4D4"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <EditText
        android:id="@+id/confirm_pass_txt"
        android:layout_width="300dp"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/backedit"
        android:gravity="center"

        android:hint="re-enter Password"

        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#D6D4D4"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794" />

    <EditText
        android:id="@+id/email_txt"
        android:layout_width="300dp"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/backedit"
        android:gravity="center"

        android:hint="email"

        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#D6D4D4"

        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.587" />

    <Button
        android:id="@+id/register_Btn"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rectangle"
        android:text="Register"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="204dp"
        app:layout_constraintBottom_toTopOf="@+id/firstName_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ship" />

</android.support.constraint.ConstraintLayout>